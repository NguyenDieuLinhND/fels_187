<% provide :title, t("header.users") %>
<h1><%= t "header.users" %></h1>

<div class="row">
  <div class="col-xs-3 left-content">
    <div class="row text-center">
      <%= render "shared/user_info" %>
      <%= render "shared/stats" %>
    </div>
  </div>

  <div class="col-xs-9 right-content">
    <div class="row">
      <div class="search center">
        <%= render "shared/search_form", name: Settings.search_field.user %>
      </div>
      <br>
      <div class="row users">
        <%= render @users %>
      </div>
    </div>
  </div>
</div>
