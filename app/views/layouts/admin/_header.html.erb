<div id="admin-header">
  <header class="main-header">
    <%= link_to admin_root_path, class: "logo" do %>
      <h2 class="logo-lg"><%= t "header.admin_logo" %></h2>
    <% end %>
    <nav class="navbar navbar-static-top" role="navigation">
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag current_user.avatar, size: Settings.size_profile %>
              <span class="hidden-xs"><%= current_user.name %></span>
            </a>
            <ul class="dropdown-menu">
              <li class="user-header">
                <%= image_tag current_user.avatar, size: Settings.size_profile %>
                <p><%= current_user.name %></p>
              </li>
              <li class="user-footer">
                <div class="col-xs-4 pull-left">
                  <%= link_to t("staticpages.profile"), "#",
                    class: "btn btn-default btn-flat" %>
                </div>
                <div class="col-xs-4 pull-right">
                  <%= link_to t("staticpages.logout"),
                    destroy_user_session_path,
                    method: :delete, class: "btn btn-default btn-flat" %>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>
</div>
